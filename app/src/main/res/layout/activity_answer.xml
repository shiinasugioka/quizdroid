<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearlayout_title"
        style="@style/linearlayout_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/app_title"
            style="@style/app_title" />

        <TextView
            android:id="@+id/app_title_ep"
            style="@style/app_title_ep" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_answers_text_content"
        style="@style/linearlayout_questions_text_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_title">

        <TextView
            android:id="@+id/questions_question_number"
            style="@style/questions_question_number"
            android:text="Question Num"
            tools:layout_editor_absoluteX="167dp"
            tools:layout_editor_absoluteY="167dp" />

        <TextView
            android:id="@+id/answers_your_answer"
            style="@style/answers_your_answer"
            android:text="Your answer:" />

        <TextView
            android:id="@+id/questions_user_answers_display"
            style="@style/questions_answers_display"
            android:text="User Ans Here" />

        <TextView
            android:id="@+id/questions_answers_validity"
            style="@style/questions_answers_validity"
            android:text="Incorrect" />

        <TextView
            android:id="@+id/questions_answers_answer_key_text"
            style="@style/questions_answers_correct_text"
            android:text="The correct answer was:" />

        <TextView
            android:id="@+id/questions_real_answers_display"
            style="@style/questions_answers_display"
            android:layout_marginBottom="30dp"
            android:text="Real Ans Here" />

        <TextView
            android:id="@+id/questions_answers_count_text"
            style="@style/questions_answers_count_text"
            android:text="You have some number of questions correct." />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_answers_next_button"
        style="@style/linearlayout_answers_next_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/answers_next_button"
            style="@style/questions_submit_button"
            android:text="Next" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>