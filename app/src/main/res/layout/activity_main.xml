<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/actionbar_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/actionbar_theme" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        style="@style/linearlayout_text"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionbar_linearLayout">

        <TextView style="@style/text_section" />
    </LinearLayout>

    <LinearLayout
        style="@style/linearlayout_buttons"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/QuizOption1"
            style="@style/quiz_option_button"
            android:text="@string/quiz_option_1"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="280dp" />

        <TextView
            android:id="@+id/QuizOption1Subtitle"
            style="@style/QuizOptionSubtitle" />

        <Button
            android:id="@+id/QuizOption2"
            style="@style/quiz_option_button"
            android:text="@string/quiz_option_2"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="280dp" />

        <TextView
            android:id="@+id/QuizOption2Subtitle"
            style="@style/QuizOptionSubtitle" />

        <Button
            android:id="@+id/QuizOption3"
            style="@style/quiz_option_button"
            android:text="@string/quiz_option_3"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="280dp" />

        <TextView
            android:id="@+id/QuizOption3Subtitle"
            style="@style/QuizOptionSubtitle" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
