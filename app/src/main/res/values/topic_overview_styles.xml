<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Text Content  -->
    <style name="linearlayout_overview_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginBottom">127dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="quiz_welcome_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="quiz_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="quiz_total_questions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--  Start Quiz Button  -->
    <style name="linearlayout_begin_quiz_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">87dp</item>
        <item name="android:layout_marginTop">98dp</item>
        <item name="android:layout_marginBottom">142dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="start_quiz_button">
        <item name="android:layout_width">215dp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:backgroundTint">#fce5c5</item>
        <item name="android:textColor">#F58B29</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>