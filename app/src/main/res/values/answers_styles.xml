<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Questions Text Content -->
    <style name="questions_answers_display">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">#c2d2df</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#00508A</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Questions Answer Validity  -->
    <style name="questions_answers_correct">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:fontFamily">@font/lilita_one</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#008A2F</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="questions_answers_count_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--  Questions Next Question Button  -->
    <style name="linearlayout_answers_next_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">131dp</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingLeft">200dp</item>
        <item name="android:paddingRight">55dp</item>
    </style>
</resources>